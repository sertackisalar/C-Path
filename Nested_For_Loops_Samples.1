using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace nested_for_loops_1
{
    internal class Program
    {
        static void Main(string[] args)
        {

            for (int a = 1; a <= 5; a++)
            {
                Console.WriteLine("a= " + a);
                for (int i = 1; i <= 3; i++)
                {
                    Console.WriteLine("i= " + i);
                }
                Console.WriteLine("");  
            }

            Console.Read();
        }

    }
}
